        margin-bottom: 1rem;
    }

    .post-content li {
        margin-bottom: 0.5rem;
    }

    @media (max-width: 768px) {
        .post-title {
            font-size: 2rem;
        }

        .post-content {
            font-size: 1rem;
        }

        .post-content h2 {
            font-size: 1.5rem;
        }

        .post-content h3 {
            font-size: 1.3rem;
        }
    }
</style>