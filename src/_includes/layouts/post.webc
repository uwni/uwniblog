        border-bottom: 2px solid #f1f3f4;
    }

    .post-title {
        color: #2c3e50;
        font-size: 2.5rem;
        margin-bottom: 1rem;
        font-weight: 400;
        line-height: 1.2;
    }

    .post-meta {
        color: #6c757d;
        font-size: 0.95rem;
        font-style: italic;
    }

    .post-meta a {
        color: #667eea;
        text-decoration: none;
        margin-right: 0.5rem;
    }

    .post-meta a:hover {
        text-decoration: underline;
    }

    .post-content {
        font-size: 1.1rem;
        line-height: 1.8;
    }

    .post-content h2 {
        color: #2c3e50;
        margin: 2rem 0 1rem 0;
        font-size: 1.8rem;
        font-weight: 500;
    }

    .post-content h3 {
        color: #34495e;
        margin: 1.5rem 0 0.75rem 0;
        font-size: 1.4rem;
        font-weight: 500;
    }

    .post-content p {
        margin-bottom: 1.2rem;
    }

