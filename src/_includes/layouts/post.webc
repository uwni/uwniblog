<layout-base webc:nokeep>
    <article class="post">
        <div class="post-title-section">
            <h1 class="post-title" @text="title"></h1>
            <div class="post-meta">
                <time @text="page.date"></time>
                <span webc:if="tags"> â€¢ Tags:
                    <span webc:for="tag of tags">
                        <a :href="`/tags/${tag}/`" @text="tag"></a>
                    </span>
                </span>
            </div>
        </div>
        <div class="post-content">
            <template @html="content" webc:nokeep></template>
        </div>
    </article>
</layout-base>

<style>
    .post {
        margin-bottom: 3rem;
    }

    .post-title-section {
        margin-bottom: 2rem;
